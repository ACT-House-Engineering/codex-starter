// Same as biome.jsonc but stricter to make AI write better code
{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"extends": ["./biome.jsonc"],
	"linter": {
		"rules": {
			// Activate HARD MODE
			"recommended": true,
			"correctness": {
				"useImportExtensions": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": ["scripts/**"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off"
					}
				}
			}
		}
	]
}
