// Same as biome.jsonc but stricter to make AI write better code
{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["./biome.jsonc"],
  "linter": {
    "rules": {
      "correctness": {
        "useImportExtensions": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["scripts/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ]
}
